@using MudBlazor
@using OpenLayers.Blazor
@namespace Ellipse.Components.MarkerMenuItem

<MudCard>
    <MudCardHeader>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" OnClick="@(() => OnSelect?.Invoke(Marker))" />
        </CardHeaderActions>
        <CardHeaderContent>
            <MudText Typo="Typo.h3" Color="Color.Dark" Align="Align.Start">
                @Marker.Text
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <div class="text-grey-400">
            <MudText>
                Distance: @Marker.Properties["Routes"]["Average Distance"].Distance
            </MudText>
            <MudText>
                Duration: @Marker.Properties["Routes"]["Average Distance"].Duration
            </MudText>
        </div>
    </MudCardContent>
</MudCard>
